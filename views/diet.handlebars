<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{pageTitle}}</title>
    <link rel="stylesheet" href="../public/css/main.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/workouts">Workouts</a></li>
                <li><a href="/diet">Diet</a></li>
                <li><a href="/community">Community</a></li>
                <li><a href="/login">Login/Sign Up</a></li>
                <li><a href="/profile">Profile</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <h1>Diet Tracker</h1>
        <div class="meal-container">
            <!-- Display meal details here -->
            <h2>{{mealName}}</h2>
            <p>{{mealDescription}}</p>
            <ul>
                {{#each mealItems}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="meal-list">
            <h2>Meals</h2>
            <ul>
                {{#each meals}}
                <li><a href="/diet/{{this.id}}">{{this.name}}</a></li>
                {{/each}}
            </ul>
        </div>
    </main>

    <footer>
        <!-- Footer content here -->
    </footer>

    <script src=""></script>
</body>
</html>
